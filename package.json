    "express": "^4.19.2",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.0.5",
    "prisma": "^5.15.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
